{
  "name": "currency-exchange-api",
  "version": "1.0.0",
  "description": "An API that fetches country data from an external API, stores it in a database, and provides CRUD operations.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "api",
    "currency",
    "exchange",
    "countries",
    "rest"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "jimp": "^0.22.12",
    "joi": "^17.13.3",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OgoNelson/Currency-Exchange-API.git"
  },
  "bugs": {
    "url": "https://github.com/OgoNelson/Currency-Exchange-API/issues"
  },
  "homepage": "https://github.com/OgoNelson/Currency-Exchange-API#readme"
}
